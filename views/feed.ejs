<% include ./partials/header.ejs %>

<div class="text-white p-5 flex gap-5 flex-wrap">
  <% if (posts.length === 0) { %>
  <h1>No pins</h1>
  <%} else { for (var i = 0; i < posts.length; i++ ) { %>
  <a href="/pin/<%= posts[i]._id %>" class="h-fit w-fit">
    <div class="card [width:200px] rounded-lg overflow-hidden bg-zinc-700">
      <div class="image">
        <img src="/images/uploads/<%= posts[i].image %>" alt="Your Pin" />
      </div>
    </div>
  </a>
  <% } } %>
</div>
<% include ./partials/footer.ejs %>
